<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.regulus.oauth.center.mapper.usercenter.UserMapper">
    
    <resultMap id="BaseResultMap" type="org.regulus.oauth.center.model.usercenter.User">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="userStatus" column="user_status" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="Base_Column_List">
        id, nickname, username, password, user_status, create_time
    </sql>

    <!-- 基础查询条件 -->
    <sql id="Base_Example_Where_Clause">
        <where>
            <if test="username != null and username != ''">
                AND username = #{username, jdbcType=VARCHAR }
            </if>
            <if test="userStatus != null and userStatus != ''">
                AND user_status = #{userSource, jdbcType=VARCHAR }
            </if>
        </where>
    </sql>

    <select id="selectUserByExample" parameterType="org.regulus.oauth.center.model.usercenter.User"
            resultMap="BaseResultMap">
            
        SELECT 
        <include refid="Base_Column_List"/>
        FROM t_user
        <include refid="Base_Example_Where_Clause"/>
    </select>
    
</mapper>